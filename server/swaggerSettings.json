{
    "swaggerDefinition": {
        "openapi": "3.0.0",
        "info": {
            "title": "Ifixit Ad Server",
            "version": "1.0.0",
            "description": "An API for IFixit's Ad Server, created by Team 03-Alphas",
            "license": {
                "name": "MIT",
                "url": "https://choosealicense.com/licenses/mit/"
            },
            "contact": {
                "name": "No reply",
                "url": "https://swagger.io"
            }
        },
        "servers": [
            {
                "url": "http://localhost:3000/"
            }
        ],
        "tags": [
            {
                "name": "ad",
                "description": "Everything about ad"
            },
            {
                "name": "campaign",
                "description": "Everything about campaign"
            },
            {
                "name": "user",
                "description": "Everything about user"

            }
        ],
        "components": {
            "schemas": {
                "Impressions": {
                    "type": "object",
                    "properties": {
                        "clicks": {
                            "type": "integer",
                            "format": "int32",
                            "example": 0
                        },
                        "seen": {
                            "type": "integer",
                            "format": "int32",
                            "example": 0
                        },
                        "ctr": {
                            "type": "number",
                            "format": "double",
                            "example": 0
                        }
                    }
                },
                "Ad": {
                    "type": "object",
                    "properties": {
                        "adId": {
                            "type": "string",
                            "example": "xGpTCGJSIDX0Z8RbMbkb"
                        },
                        "adData": {
                            "type": "object",
                            "properties":{
                                "impressions":{
                                    "$ref": "#/components/schemas/Impressions"
                                },
                                "title": {
                                    "type": "string",
                                    "example": "Ad title example"
                                }
                            }
                        }
                    }
                },
                "AdWithoutId":{
                    "type": "object",
                    "properties": {
                        "adData": {
                            "type": "object",
                            "properties":{
                                "impressions":{
                                    "$ref": "#/components/schemas/Impressions"
                                },
                                "title": {
                                    "type": "string",
                                    "example": "Ad title example"
                                }
                            }
                        }
                    }
                },
                "Campaign": {
                    "type": "object",
                    "properties": {
                        "campaignId": {
                            "type": "string",
                            "example": "7QKUcWNNRkIQ89jUzqo2"
                        },
                        "campaignData": {
                            "type": "array",
                            "items": {
                                "type" : "string"
                            },
                            "example": ["1st ad id", "2nd ad id", "3rd ad id"]
                        }
                    }
                },
                "CampaignWithoutId": {
                    "type": "object",
                    "properties": {
                        "campaignData": {
                            "type": "array",
                            "items": {
                                "type" : "string"
                            },
                            "example": ["1st ad id", "2nd ad id", "3rd ad id"]
                        }
                    }
                },
                "User": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string",
                            "example": "Trump"
                        },
                        "email": {
                            "type": "string",
                            "example": "test@gmail.com"
                        }
                    }
                }
            }
        },
        "paths": {
            "/campaign": {
                "get":{
                    "tags": [ 
                        "campaign"
                    ],
                    "summary": "Get a list of campaign objects",
                    "parameters": [],
                    "responses": {
                        "200": {
                            "description": "Successful Operation",
                            "content":{
                                "application/json": {
                                    "schema":{
                                        "type": "array",
                                        "items":{
                                            "$ref": "#/components/schemas/CampaignWithoutId" 
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "/campaign/{campaignId}": {
                "get":{
                    "tags": [ 
                        "campaign"
                    ],
                    "summary": "Get the campaign by ID",
                    "parameters": [
                        {
                            "in": "path",
                            "name": "campaignId",
                            "schema":{
                                "type": "string"
                            },
                            "required": true,
                            "description": "ID of campaign to return",
                            "example": "7QKUcWNNRkIQ89jUzqo2"
                        }
                    ],
                    "responses": {
                        "200": {
                            "description": "Successful Operation",
                            "content":{
                                "application/json": {
                                    "schema":{
                                        "$ref": "#/components/schemas/CampaignWithoutId" 
                                    }
                                }
                            }
                        },
                        "404": {
                            "description": "Campaign does not exist by given ID"
                        },
                        "500": {
                            "description": "Error retrieving info"
                        }
                    }
                }
            },
            "/ad": {
                "get":{
                    "tags": [ 
                        "ad"
                    ],
                    "summary": "Get a list of ad objects",
                    "parameters": [],
                    "responses": {
                        "200": {
                            "description": "Successful Operation",
                            "content":{
                                "application/json": {
                                    "schema":{
                                        "type": "array",
                                        "items":{
                                            "$ref": "#/components/schemas/AdWithoutId" 
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "/campaign/edit": {
                "put":{
                    "tags": [ 
                        "campaign"
                    ],
                    "summary": "Update an existing campaign",
                    "requestBody": {
                        "required": true,
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Campaign"
                                }
                            }
                        }
                    },
                    "responses": {
                        "200": {
                            "description": "Successful Operation",
                            "content":{
                                "text/plain": {
                                    "schema": {
                                        "type": "string",
                                        "example": "Success"
                                    }
                                }
                            }
                        },
                        "500": {
                            "description": "Improper data inputs"
                        }
                    }
                }
            },
            "/campaign/create": {
                "put":{
                    "tags": [ 
                        "campaign"
                    ],
                    "summary": "Create a new campaign",
                    "requestBody": {
                        "required": true,
                        "description": "If the campaign already exists, update with new campaign",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Campaign"
                                }
                            }
                        }
                    },
                    "responses": {
                        "200": {
                            "description": "Successful Operation",
                            "content":{
                                "text/plain": {
                                    "schema": {
                                        "type": "string",
                                        "example": "Success"
                                    }
                                }
                            }
                        },
                        "500": {
                            "description": "Improper data inputs"
                        }
                    }
                }
            },
            "/ad/create": {
                "put":{
                    "tags": [ 
                        "ad"
                    ],
                    "summary": "Create a new ad",
                    "description": "If the ad already exists, update with new ad",
                    "requestBody": {
                        "required": true,
                        "description": "Ad object that needs to be added to the database",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Ad"
                                }
                            }
                        }
                    },
                    "responses": {
                        "200": {
                            "description": "Successful Operation",
                            "content":{
                                "text/plain": {
                                    "schema": {
                                        "type": "string",
                                        "example": "Success"
                                    }
                                }
                            }
                        },
                        "500": {
                            "description": "Improper data inputs"
                        }
                    }
                }
            },
            "/ad/edit": {
                "put":{
                    "tags": [ 
                        "ad"
                    ],
                    "summary": "Update an existing ad",
                    "requestBody": {
                        "required": true,
                        "description": "Ad object that needs to be updated to the database",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Ad"
                                }
                            }
                        }
                    },
                    "responses": {
                        "200": {
                            "description": "Successful Operation",
                            "content":{
                                "text/plain": {
                                    "schema": {
                                        "type": "string",
                                        "example": "Success"
                                    }
                                }
                            }
                        },
                        "500": {
                            "description": "Improper data inputs"
                        }
                    }
                }
            },
            "/ad/delete/{adId}": {
                "delete":{
                    "tags": [
                        "ad"
                    ],
                    "summary": "Delete an ad",
                    "parameters": [
                        {
                            "name": "adId",
                            "in": "path",
                            "description": "ID of ad to delete",
                            "required": true,
                            "schema":{
                                "type": "string"
                            },
                            "example": "xGpTCGJSIDX0Z8RbMbkb"
                        }
                    ],
                    "responses": {
                        "200": {
                            "description": "Successful Operation",
                            "content":{
                                "text/plain": {
                                    "schema": {
                                        "type": "string",
                                        "example": "Success"
                                    }
                                }
                            }
                        },
                        "500": {
                            "description": "Improper data inputs"
                        }
                    }
                }
            },
            "/ad/search": {
                "get":{
                    "tags": [ 
                        "ad"
                    ],
                    "summary": "Get an ad list by their title",
                    "parameters": [
                        {
                            "name": "title",
                            "in": "query",
                            "schema":{
                                "type": "string"
                            },
                            "required": true,
                            "example": "testTitle"
                            
                        }
                    ],
                    "responses": {
                        "200": {
                            "description": "Successful Operation",
                            "content":{
                                "application/json": {
                                    "schema":{
                                        "type": "array",
                                        "items":{
                                            "$ref": "#/components/schemas/AdWithoutId" 
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "/ad/{adId}": {
                "get":{
                    "tags": [ 
                        "ad"
                    ],
                    "summary": "Get the ad by ID",
                    "parameters": [
                        {
                            "in": "path",
                            "name": "adId",
                            "description": "ID of ad to return",
                            "required": true,
                            "schema": {
                                "type": "string"
                            },
                            "example": "vEXzgrwMg1TIsBPacmo6"
                        },
                        {
                            "in": "query",
                            "name": "impression",
                            "required": false,
                            "schema":{
                                "type": "boolean"
                            },
                            "example": true
                        },
                        {
                            "in": "query",
                            "name": "clicked",
                            "required": false,
                            "schema": {
                                "type": "boolean"
                            },
                            "example": true
                        }
                    ],
                    "responses": {
                        "200": {
                            "description": "Successful Operation",
                            "content":{
                                "application/json": {
                                    "schema":{
                                        "$ref": "#/components/schemas/AdWithoutId" 
                                    }
                                }
                            }
                        },
                        "500": {
                            "description": "Error retrieving info"
                        }
                    }
                }
            },
            "/user/create":{
                "post":{
                    "tags": [ 
                        "user"
                    ],
                    "summary": "Create a new user",
                    "requestBody": {
                        "required": true,
                        "description": "New user needs to be added to database",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "responses": {
                        "200": {
                            "description": "Successful Operation"
                        },
                        "500": {
                            "description": "Cannot create user"
                        }
                        
                    }
                }
            }

        }

    },
    "apis": ["./*.js"]
}
